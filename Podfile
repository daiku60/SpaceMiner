# Uncomment the next line to define a global platform for your project
# platform :ios, '9.0'

target 'SpaceMiner' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

  # Pods for SpaceMiner
  pod 'BSWInterfaceKit', :git => "https://github.com/BlurredSoftware/BSWInterfaceKit.git"
  pod 'R.swift'
  pod 'Cartography', :inhibit_warnings => true

  target 'SpaceMinerTests' do
    inherit! :search_paths
    # Pods for testing
    pod 'FBSnapshotTestCase', :inhibit_warnings => true
  end

end
